{
  "expo": {
    "name": "bubble",
    "slug": "bubble",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/bubble-ios-icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/bubble-ios-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icons/bubble-ios-icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "splash": {
      // 여기에 스플래시 화면 설정을 추가하거나 수정합니다.
      "image": "./assets/images/bg.png",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    }
  }
}
